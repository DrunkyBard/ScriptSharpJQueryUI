@{
    Layout = "~/Views/Shared/_ResizableLayout.cshtml";
}
<div id="demo-frame">
    <div class="demo">
        <style>
            #resizable8
            {
                background-position: top left;
            }
            #resizable8, #also
            {
                width: 150px;
                height: 120px;
                padding: 0.5em;
            }
            #resizable8 h3, #also h3
            {
                text-align: center;
                margin: 0;
            }
            #also
            {
                margin-top: 1em;
            }
        </style>
        <div id="resizable8" class="ui-widget-header">
            <h3 class="ui-state-active">
                Resize</h3>
        </div>
        <div id="also" class="ui-widget-content">
            <h3 class="ui-widget-header">
                will also resize</h3>
        </div>
    </div>
</div>
<div class="demo-description">
    <p>
        Resize multiple elements simultaneously by clicking and dragging the sides of one.
        Pass a shared selector into the <code>alsoResize</code> option.</p>
</div>
